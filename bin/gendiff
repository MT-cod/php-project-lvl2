$doc = <<<'DOCOPT'
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                     Show this screen
  -v --version                  Show version
  --format <fmt>                Report format [default: stylish]
DOCOPT;

$args = Docopt::handle($doc, array('version'=>'v0.0.6'));
/*foreach ($args as $k=>$v)
    echo $k.': '.json_encode($v).PHP_EOL;*/
//<<<Подключаем и "заряжаем" Docopt


function genDiff(Docopt\Response $args): string
{
    $file1 = json_decode(file_get_contents($args['<firstFile>']), true);
    $file2 = json_decode(file_get_contents($args['<secondFile>']), true);
    $merged = array_merge($file1, $file2);
    ksort($merged);
    $res = "{\n";
    foreach ($merged as $key => $item) {
        if (!key_exists($key, $file1) && key_exists($key, $file2)) {
            $res .=  "+ $key: " . ifBoolToString($item) . "\n";
        } elseif (key_exists($key, $file1) && !key_exists($key, $file2)) {
            $res .=  "- $key: " . ifBoolToString($item) . "\n";
        } else {
            if ($file1[$key] === $file2[$key]) {
                $res .=  "  $key: " . ifBoolToString($item) . "\n";
            } else {
                $res .=  "- $key: " . ifBoolToString($file1[$key]) . "\n";
                $res .=  "+ $key: " . ifBoolToString($file2[$key]) . "\n";
            }
        }
    }
    $res .= "}\n";
    return $res;
}

//Проверяем, если значение булево, то возвращаем его эквивалент в строке
function ifBoolToString(mixed $value): mixed
{
    if ($value === true) {
        return 'true';
    } elseif ($value === false) {
        return 'false';
    } else {
        return $value;
    }
}

echo(genDiff($args));
