#!/usr/bin/env php
<?php

namespace Projects\lvl2;

//Подключаем и "заряжаем" Docopt>>>
require __DIR__ . '/../app/docopt.php';
/*$autoloadPath1 = __DIR__ . '/../../../autoload.php';
